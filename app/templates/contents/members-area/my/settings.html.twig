{% extends 'layouts/members-area.html.twig' %}

{% set user = user | default(app.user) %}

{% block title %}{{ 'Settings' | trans }} | {{ 'My' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>{{ 'Settings' | trans }}</h1>
    <ol class="breadcrumb">
        <li>
            <a href="{{ url('members-area') }}">
                {{ 'Home' | trans }}
            </a>
        </li>
        <li>
            <a href="{{ url('members-area.my') }}">
                {{ 'My' | trans }}
            </a>
        </li>
        <li class="active">
            {{ 'Settings' | trans }}
        </li>
    </ol>
    {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-6">
                <h3>{{ 'Profile' | trans }}</h3>
                {{ form_row(form.profile) }}
            </div>
            <div class="col-md-6">
                <h3>{{ 'Account' | trans }}</h3>
                {{ form_row(form.username) }}
                {{ form_row(form.email) }}
            </div>
        </div>
        {{ form_row(form.submitButton) }}
    {{ form_end(form) }}
{% endblock %}
