{% extends 'layouts/content/members-area/register.html.twig' %}

{% block title %}{{ 'Register' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1 class="text-center">
        {{ 'Register' | trans }}
    </h1>
    <hr />
    {% if app.user_system_options.registration_enabled %}
        {% if alert %}
            <div class="alert alert-{{ alert }}">
                {{ alertMessage | trans | raw }}
            </div>
        {% else %}
            {{ form(form) }}
        {% endif %}
    {% else %}
        <div class="alert alert-info">
            {{ 'Registration is disabled' | trans }}
        </div>
    {% endif %}
{% endblock %}
