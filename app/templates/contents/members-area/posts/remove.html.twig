{% extends 'layouts/members-area.html.twig' %}

{% block title %}{{ 'Remove' | trans }} | {{ post ? post : posts | join(', ') }} | {{ 'Posts' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>
        {% if posts %}
            {{ 'Remove Posts' | trans }}
        {% else %}
            {{ 'Remove Post' | trans }}
            <small>"{{ post }}"</small>
        {% endif %}
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="{{ url('members-area') }}">
                {{ 'Home' | trans }}
            </a>
        </li>
        <li>
            <a href="{{ url('members-area.posts') }}">
                {{ 'Posts' | trans }}
            </a>
        </li>
        <li class="active">
            {{ 'Remove' | trans }}
        </li>
    </ol>
    <div class="alert alert-block alert-warning">
        <h4 class="alert-heading">
            {{ 'Warning!' | trans }}
        </h4>
        {% if posts %}
            <p>{{ 'Are you sure you want to remove this posts?' | trans }}</p>
            <ul style="margin-bottom: 10px;">
                {% for post in posts %}
                    <li>{{ post }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <p>{{ 'Are you sure you want to remove this post?' | trans }}</p>
        {% endif %}
        <p>
            {% if posts %}
                <a class="btn btn-danger"
                    href="{{ url('members-area.posts.remove', { id: 0, action: 'confirm', ids: ids }) }}">
                    {{ 'Confirm' | trans }}
                </a>
            {% else %}
                <a class="btn btn-danger"
                    href="{{ url('members-area.posts.remove', { id: post.getId(), action: 'confirm' }) }}">
                    {{ 'Confirm' | trans }}
                </a>
            {% endif %}
            <a class="btn btn-success"
                href="{{ url('members-area.posts') }}">
                {{ 'Cancel' | trans }}
            </a>
        </p>
    </div>
{% endblock %}
