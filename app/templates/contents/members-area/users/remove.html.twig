{% extends 'layouts/members-area.html.twig' %}

{% block title %}{{ 'Remove' | trans }} | {{ user ? user : users | join(', ') }} | {{ 'Users' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>
        {% if users %}
            {{ 'Remove Users' | trans }}
        {% else %}
            {{ 'Remove User' | trans }}
            <small>"{{ user }}"</small>
        {% endif %}
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="{{ url('members-area') }}">
                {{ 'Home' | trans }}
            </a>
        </li>
        <li>
            <a href="{{ url('members-area.users') }}">
                {{ 'Users' | trans }}
            </a>
        </li>
        <li class="active">
            {{ 'Remove' | trans }}
        </li>
    </ol>
    <div class="alert alert-block alert-warning">
        <h4 class="alert-heading">
            {{ 'Warning!' | trans }}
        </h4>
        {% if users %}
            <p>{{ 'Are you sure you want to remove this users?' | trans }}</p>
            <ul style="margin-bottom: 10px;">
                {% for user in users %}
                    <li>{{ user }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <p>{{ 'Are you sure you want to remove this user?' | trans }}</p>
        {% endif %}
        <p>
            {% if users %}
                <a class="btn btn-danger"
                    href="{{ url('members-area.users.remove', { id: 0, action: 'confirm', ids: ids }) }}">
                    {{ 'Confirm' | trans }}
                </a>
            {% else %}
                <a class="btn btn-danger"
                    href="{{ url('members-area.users.remove', { id: user.getId(), action: 'confirm' }) }}">
                    {{ 'Confirm' | trans }}
                </a>
            {% endif %}
            <a class="btn btn-success"
                href="{{ url('members-area.users') }}">
                {{ 'Cancel' | trans }}
            </a>
        </p>
    </div>
{% endblock %}
