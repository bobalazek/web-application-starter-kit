{% extends 'layouts/members-area.html.twig' %}

{% block title %}{{ 'Edit' | trans }} | {{ user }} | {{ 'Users' | trans }} | {{ parent() }}{% endblock %}

{% block main %}
    <h1>
        {{ 'Edit User' | trans }}
        <a class="btn btn-primary btn-sm"
            href="{{ url('members-area.users.new') }}">
            {{ 'New' | trans }}
        </a>
        <br />
        <small>{{ user }}</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="{{ url('members-area') }}">
                {{ 'Home' | trans }}
            </a>
        </li>
        <li>
            <a href="{{ url('members-area.users') }}">
                {{ 'Users' | trans }}
            </a>
        </li>
        <li class="active">
            {{ 'Edit' | trans }}
        </li>
    </ol>
    {% include 'contents/members-area/users/_form.html.twig' %}
